entrypoint = "server.ts"
run = "npm run start"
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33227
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Angular App"

[[workflows.workflow]]
name = "Start Angular App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ng serve --host 0.0.0.0 --port 5000 --disable-host-check"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
